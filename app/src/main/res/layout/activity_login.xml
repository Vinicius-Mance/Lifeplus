<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/gradient_bg"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/labelLogo"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Life+"
        android:textAllCaps="true"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:textSize="32dp" />

    <RelativeLayout
        android:layout_below="@+id/labelLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corners_rectangle"
        android:backgroundTint="#7cccdc"
        >
<!--  email editText-->
    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Email"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#000" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelEmail"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/white"
            android:hint="seuemail@lifeplus.com"
            android:textColorHint="#a1a1a1"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="25dp" />

    <!--  senha editText-->
    <TextView
        android:id="@+id/labelSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:text="Senha"
        android:textAlignment="center"
        android:textColor="#000" />

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelSenha"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_rectangle"
            android:drawableEnd="@drawable/ic_lock_24"
            android:drawableTint="@color/main_purple"
            android:backgroundTint="@color/white"
            android:hint="•••••••••••••"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textColorHint="#a1a1a1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/main_purple"
            android:text="Entrar"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>